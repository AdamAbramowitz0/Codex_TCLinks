# Database
# Use DATABASE_URL for PostgreSQL in production (recommended)
DATABASE_URL=

# SQLite fallback (used when DATABASE_URL is empty)
DATABASE_PATH=market.db

# Model config
MODEL_CONFIG_PATH=config/model_agents.yaml

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Cookies
COOKIE_SECURE=0

# Jobs/Cron auth token (set this to the same value as CRON_SECRET on Vercel)
JOB_AUTH_TOKEN=

# Marginal Revolution feed
MR_FEED_URL=https://marginalrevolution.com/feed

# Twilio Verify/SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
TWILIO_MESSAGING_SERVICE_SID=
